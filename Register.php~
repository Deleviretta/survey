<?php

class Register {

   protected $data = array()  ;

   function __construct () { 
   }
      
   function _read () {
      $this->data['imie'] = $_POST['imie'] ;
      $this->data['nazwisko'] = $_POST['nazwisko'] ;
      $this->data['uczelnia'] = $_POST['uczelnia'] ;
      $this->data['email']  = $_POST['email'] ;
      $this->data['haslo'] = $_POST['haslo1'];
	
   }          

   function _write () {
      echo "Wprowadzone dane (obiektowo) <br/>" ;
      echo "Imię: ". $this->data['imie'] ." <br/>" ;   
      echo "Nazwisko: ". $this->data['nazwisko'] ." <br/>" ;
      echo "E-mail: ". $this->data['email'] ." <br/>" ;
      echo "Hasło: ". $this->data['haslo'] ." <br/>" ; 
      echo "Uczelnia: ". $this->data['uczelnia']. " <br/>";
   }  
}
?>
